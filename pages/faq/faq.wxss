.container {
  min-height: 100vh;
  background-color: #F6F6F6;
  display: flex;
  flex-direction: column;
}

/* 导航栏样式 */
.nav-bar {
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #F6F6F6;
  position: relative;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.title-icon {
  width: 48rpx;
  height: 48rpx;
}

.nav-title text {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.menu-icon, .share-icon {
  width: 40rpx;
  height: 40rpx;
}

/* FAQ列表样式 */
.faq-list {
  flex: 1;
  padding: 20rpx 30rpx;
}

.faq-item {
  background-color: #A5C7A5;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.faq-question {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.faq-question text {
  font-size: 32rpx;
  color: #fff;
  flex: 1;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  transition: transform 0.3s ease;
}

.arrow-icon.open {
  transform: rotate(180deg);
}

.faq-answer {
  background-color: #fff;
  padding: 0;
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s ease-in-out;
}

.faq-answer.show {
  padding: 30rpx;
  max-height: 1000rpx;
}

.faq-answer text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
} 