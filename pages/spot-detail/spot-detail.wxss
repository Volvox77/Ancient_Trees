/* spot-detail.wxss */
.detail-container {
  width: 100vw;
  height: 100vh;
  background: #FAFDF8;
  position: relative;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  padding: 44rpx 32rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
  background: linear-gradient(180deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0) 100%);
}

.back-btn, .menu-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon, .menu-icon {
  width: 40rpx;
  height: 40rpx;
}

.content-scroll {
  height: 100vh;
  background: #FAFDF8;
}

.header {
  padding: 160rpx 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 48rpx;
  color: #4A6B4A;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #999999;
}

.main-image {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}

.main-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.tree-image {
  margin: 32rpx;
  height: 600rpx;
  overflow: hidden;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.tree-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.description {
  padding: 40rpx;
  background: #FFFFFF;
  border-radius: 32rpx 32rpx 0 0;
  margin-top: -32rpx;
}

.desc-text {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 24rpx;
  display: block;
}

.location-text {
  font-size: 28rpx;
  color: #999999;
  display: block;
}

.bottom-nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 0 40rpx;
  background: #FFFFFF;
  margin-top: 40rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.nav-item text {
  font-size: 24rpx;
  color: #999999;
}

.nav-item.active text {
  color: #4A6B4A;
}

.nav-item.active image {
  opacity: 1;
}

.trees-section {
  padding: 40rpx;
}

.tree-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.tree-info {
  flex: 1;
  margin-right: 30rpx;
}

.tree-name {
  font-size: 32rpx;
  color: #4A6B4A;
  font-weight: bold;
  margin-bottom: 12rpx;
  display: block;
}

.tree-location {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 16rpx;
  display: block;
}

.tree-description {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.tree-image-container {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.ar-tip {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(165, 199, 165, 0.9);
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.ar-tip .ar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.ar-tip text {
  color: #FFFFFF;
  font-size: 28rpx;
} 