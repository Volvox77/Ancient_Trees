<view class="camera-container">
  <!-- 相机组件 -->
  <camera device-position="back" flash="off" class="camera" mode="scanCode">
    <!-- 返回按钮 -->
    <view class="back-btn" bindtap="navigateBack">
      <image class="back-icon" src="/assets/icons/back.png" mode="aspectFit"></image>
    </view>
    
    <!-- 操作说明 -->
    <view class="scan-tip">
      <text>请阅读您附近的AR标记以激活AR！</text>
    </view>

    <!-- 扫描框 -->
    <view class="scan-box">
      <view class="scan-border">
        <view class="scan-line"></view>
      </view>
      <image class="ar-icon" src="/assets/icons/ar-scan.png" mode="aspectFit"></image>
    </view>

    <!-- 底部操作区 -->
    <view class="bottom-area">
      <view class="help-btn" bindtap="showHelp">
        <text>如何操作</text>
      </view>
    </view>
  </camera>
</view> 